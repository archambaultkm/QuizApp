<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#81A7F0"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/txtUserTopic"
        android:textAlignment="center"
        android:textColor="#FFFFFF" />

    <ProgressBar
        android:id="@+id/pbProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:progressTint="#DCEAFF" />

    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="@string/txtQuestion"
        android:textAlignment="center"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnA1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="#5289F2"
        android:fontFamily="serif"
        android:insetLeft="30dp"
        android:insetTop="20dp"
        android:insetRight="30dp"
        android:insetBottom="20dp"
        android:text="@string/txtAnswer1"
        android:textSize="24sp"
        app:cornerRadius="70dp" />

    <Button
        android:id="@+id/btnA2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="#5289F2"
        android:fontFamily="serif"
        android:insetLeft="30dp"
        android:insetTop="20dp"
        android:insetRight="30dp"
        android:insetBottom="20dp"
        android:text="@string/txtAnswer2"
        android:textSize="24sp"
        app:cornerRadius="70dp" />

    <Button
        android:id="@+id/btnA3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="#5289F2"
        android:fontFamily="serif"
        android:insetLeft="30dp"
        android:insetTop="20dp"
        android:insetRight="30dp"
        android:insetBottom="20dp"
        android:text="@string/txtAnswer3"
        android:textSize="24sp"
        app:cornerRadius="70dp" />

    <Button
        android:id="@+id/btnA4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:backgroundTint="#5289F2"
        android:fontFamily="serif"
        android:insetLeft="30dp"
        android:insetTop="20dp"
        android:insetRight="30dp"
        android:insetBottom="20dp"
        android:text="@string/txtAnswer4"
        android:textSize="24sp"
        app:cornerRadius="70dp" />

</LinearLayout>