<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#81A7F0"
    android:orientation="vertical"
    android:textAlignment="center">

    <TextView
        android:id="@+id/tvTopic"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#81A7F0"
        android:fontFamily="serif"
        android:paddingTop="140dp"
        android:text="@string/txtUserTopic"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="48sp" />

    <TextView
        android:id="@+id/tvScoreTitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fontFamily="serif"
        android:paddingTop="60dp"
        android:rotationX="0"
        android:text="@string/txtScoreTitle"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvUserScore"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fontFamily="serif"
        android:paddingTop="60dp"
        android:rotationX="0"
        android:text="@string/txtUserScore"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnPlayAgain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:backgroundTint="#5289F2"
        android:fontFamily="serif"
        android:insetLeft="50dp"
        android:insetTop="100dp"
        android:insetRight="50dp"
        android:insetBottom="100dp"
        android:text="@string/txtPlayAgain"
        android:textSize="24sp"
        app:cornerRadius="70dp"
        android:translationZ="2dp"
        android:elevation="5dp"
        android:stateListAnimator="@null"/>

</LinearLayout>
